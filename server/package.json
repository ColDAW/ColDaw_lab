{
  "name": "coldaw-server",
  "version": "1.0.0",
  "description": "Backend server for ColDaw - Collaborative DAW",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && npm run copy-sql",
    "copy-sql": "mkdir -p dist/database && cp src/database/*.sql dist/database/",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "railway:build": "npm install && npm run build",
    "railway:start": "npm start"
  },
  "keywords": [
    "daw",
    "collaboration",
    "version-control"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/nodemailer": "^7.0.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.9",
    "pako": "^2.1.0",
    "pg": "^8.11.3",
    "redis": "^5.8.3",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/pako": "^2.0.3",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@types/xml2js": "^0.4.14",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
